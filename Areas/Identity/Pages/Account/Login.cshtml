@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="text-center">
<h1>@ViewData["Title"]</h1>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="emailcím" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">E-mail cím</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mt-3">
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="jelszó" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Jelszó</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                </div>
                
                <div class="mt-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning">Bejelentkezés</button>
                </div>
                
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
