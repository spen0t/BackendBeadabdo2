@page
@model RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
}
<div class="text-center">
<h1>@ViewData["Title"]</h1>
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email">E-mail cím</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mt-3">
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="jelszó" aria-required="true" />
                <label asp-for="Input.Password">Jelszó</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="jelszó újra" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Jelszó Újra</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">Regisztráció</button>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
